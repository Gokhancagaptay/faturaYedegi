  void _exportInvoiceJSON(Map<String, dynamic> invoice) {
    // JSON export - mevcut veriyi kopyala
    final data = {
      'invoiceId': invoice['id'],
      'sellerName': invoice['sellerName'] ?? 'Bilinmeyen Satƒ±cƒ±',
      'totalAmount': invoice['totalAmount'] ?? 0.0,
      'vatAmount': invoice['vatAmount'] ?? 0.0,
      'invoiceDate': _formatDate(invoice['invoiceDate']),
      'invoiceNumber': invoice['invoiceNumber'] ?? 'N/A',
      'status': invoice['status'] ?? 'unknown',
      'structured': invoice['structured'] ?? {},
      'ocrText': invoice['ocrText'] ?? '',
      'fileUrl': invoice['fileUrl'] ?? '',
      'thumbnailUrl': invoice['thumbnailUrl'] ?? '',
    };

    final jsonString = const JsonEncoder.withIndent('  ').convert(data);
    Clipboard.setData(ClipboardData(text: jsonString));

    final isDarkMode = context.watch<ThemeProvider>().isDarkMode;
    final colors = DashboardConstants.getColors(isDarkMode);

    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: const Text('Fatura JSON verisi panoya kopyalandƒ±!'),
        backgroundColor: colors['successGreen'],
        duration: const Duration(seconds: 2),
      ),
    );
  }

  // Tam Ekran Fatura G√∂r√ºnt√ºleme - Geli≈ümi≈ü Yakƒ±nla≈ütƒ±rma ve Pan √ñzellikleri
  void _showFullScreenImage(String imageUrl) {
    Navigator.of(context).push(
      MaterialPageRoute(
        builder: (context) => Scaffold(
          backgroundColor: Colors.black,
          appBar: AppBar(
            backgroundColor: Colors.black,
            foregroundColor: Colors.white,
            title: const Text('Fatura G√∂r√ºnt√ºle'),
            actions: [
              IconButton(
                icon: const Icon(Icons.download),
                onPressed: () {
                  // TODO: Fatura resmini indir
                  ScaffoldMessenger.of(context).showSnackBar(
                    const SnackBar(
                      content: Text('ƒ∞ndirme √∂zelliƒüi yakƒ±nda eklenecek!'),
                      backgroundColor: Colors.orange,
                    ),
                  );
                },
              ),
            ],
          ),
          body: Center(
            child: InteractiveViewer(
              minScale: 0.5, // Minimum yakƒ±nla≈ütƒ±rma
              maxScale: 4.0, // Maksimum yakƒ±nla≈ütƒ±rma
              child: Image.network(
                imageUrl,
                fit: BoxFit.contain,
                loadingBuilder: (context, child, loadingProgress) {
                  if (loadingProgress == null) return child;
                  return Center(
                    child: Column(
                      mainAxisAlignment: MainAxisAlignment.center,
                      children: [
                        CircularProgressIndicator(
                          value: loadingProgress.expectedTotalBytes != null
                              ? loadingProgress.cumulativeBytesLoaded /
                                  loadingProgress.expectedTotalBytes!
                              : null,
                          strokeWidth: 3,
                          color: Colors.white,
                        ),
                        SizedBox(height: _getResponsiveSpacing(context)),
                        Text(
                          'Fatura y√ºkleniyor...',
                          style: TextStyle(
                            color: Colors.white,
                            fontSize: _getResponsiveFontSize(context, 16),
                          ),
                        ),
                      ],
                    ),
                  );
                },
                errorBuilder: (context, error, stackTrace) {
                  return Center(
                    child: Column(
                      mainAxisAlignment: MainAxisAlignment.center,
                      children: [
                        Icon(
                          Icons.error_outline,
                          color: Colors.white,
                          size: _getResponsiveContainerSize(context, 64),
                        ),
                        SizedBox(height: _getResponsiveSpacing(context)),
                        Text(
                          'Fatura resmi y√ºklenemedi',
                          style: TextStyle(
                            color: Colors.white,
                            fontSize: _getResponsiveFontSize(context, 18),
                          ),
                        ),
                      ],
                    ),
                  );
                },
              ),
            ),
          ),
        ),
      ),
    );
  }
